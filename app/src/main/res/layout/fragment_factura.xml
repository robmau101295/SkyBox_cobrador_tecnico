<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/ic_launcher_background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayoutSeleccionable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="2dp">

        <CheckBox
            android:id="@+id/checkboxPrincipal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"/>

        <TextView
            android:id="@+id/tvNFactura"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="N° Factura"
            android:textColor="@android:color/primary_text_light"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvDescripcionFactura"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/tvCodigo"
            android:layout_weight="4"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Descripción"
            android:textColor="@android:color/primary_text_light"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/tvVencimientoFactura"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_toEndOf="@+id/tvNombreyApellidos"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Fecha"
            android:textColor="@android:color/primary_text_light"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tvImporteFactura"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_toEndOf="@+id/tvTelefono"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Importe"
            android:textColor="@android:color/primary_text_light"
            android:textSize="11sp"
            android:textStyle="bold" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary" />

</LinearLayout>